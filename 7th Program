import numpy as np
from scipy import stats

# Given data
mean_A = 1000
std_A = 100
n_A = 30

mean_B = 950
std_B = 120
n_B = 30

# Step 1: Generate sample data assuming normal distribution
np.random.seed(42)  # for reproducibility
store_A = np.random.normal(mean_A, std_A, n_A)
store_B = np.random.normal(mean_B, std_B, n_B)

# Step 2: Perform independent two-sample t-test
t_stat, p_value = stats.ttest_ind(store_A, store_B, equal_var=False)  # Welch’s t-test

# Step 3: Display results
print("Two-Sample t-test Results")
print("--------------------------")
print(f"T-statistic: {t_stat:.4f}")
print(f"P-value: {p_value:.4f}")

alpha = 0.05
if p_value < alpha:
    print("✅ Reject the null hypothesis: There is a significant difference in average daily sales.")
else:
    print("❌ Fail to reject the null hypothesis: No significant difference in average daily sales.")

