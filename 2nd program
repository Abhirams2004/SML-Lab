import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Example dataset
data = {
    "Satisfaction": ["Low","Low","Medium","Medium","High","High"],
    "RepeatPurchase": ["Yes","No","Yes","No","Yes","No"],
    "Count": [20,80,50,50,90,10]
}
df = pd.DataFrame(data)

# Grouped bar plot
plt.figure(figsize=(8,5))
sns.barplot(x="Satisfaction", y="Count", hue="RepeatPurchase", data=df)
plt.title("Customer Satisfaction vs Repeat Purchase (Grouped Bar)")
plt.show()

# Stacked bar chart
df_pivot = df.pivot(index="Satisfaction", columns="RepeatPurchase", values="Count")
df_pivot.plot(kind="bar", stacked=True, figsize=(8,5))
plt.title("Customer Satisfaction vs Repeat Purchase (Stacked Bar)")
plt.ylabel("Number of Customers")
plt.show()










