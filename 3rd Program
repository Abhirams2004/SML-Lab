import seaborn as sns
import matplotlib.pyplot as plt
import pandas as pd

# Example dataset
df = pd.DataFrame({
    'Engine_Size': [1.6, 2.0, 2.5, 3.0, 4.0, 5.0],
    'Fuel_Efficiency': [35, 30, 28, 24, 20, 15],
    'Price': [20000, 25000, 30000, 35000, 50000, 70000]
})

# Pair plot
sns.pairplot(df)
plt.show()

# Correlation matrix
print(df.corr())
sns.heatmap(df.corr(), annot=True, cmap="coolwarm")
plt.show()

