import numpy as np
import matplotlib.pyplot as plt

# Simulate skewed salary distribution (log-normal)
np.random.seed(42)
population = np.random.lognormal(mean=10, sigma=0.5, size=100000)

# Draw 10 samples, each of size 50
sample_means = [np.mean(np.random.choice(population, 50)) for _ in range(10)]

# Plot the distribution of sample means
plt.hist(sample_means, bins=5, edgecolor='black')
plt.xlabel("Sample Mean Salary")
plt.ylabel("Frequency")
plt.title("Distribution of Sample Means (n=50, 10 samples)")
plt.show()
